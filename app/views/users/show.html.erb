<h1><%=@person.name%></h1>
<% if current_user.id != params[:id].to_i%>
<% if !FriendRequest.where('user1_id = ? AND user2_id = ?', current_user.id, @person.id).empty? %>
<p>friend request sent </p>
<% elsif !FriendRequest.where('user1_id = ? OR user2_id = ?', @person.id, current_user.id).empty?%>
<%= link_to 'Accept Request', accept_request_path(user_id: @person.id)%>
<%else%>
<%=link_to 'Add Friend', new_user_friend_request_path(user_id: @person.id)%>
<%end%>
<%end%>
<ul>
  <% @posts.each do |post| %>
    <li>
      <p><%=link_to post.body, post%><p>
    </li>
  <% end %>
</ul>
<h2>Friends</h2>
<ul>
  <% @friends.each do |friend| %>
    <li> <p><%=link_to friend.name, friend%><p></li>
  <% end %>
</ul>
<%=link_to 'Edit', edit_user_registration_path%>
<% if current_user.id == params[:id].to_i%>
<h2>Friend Requests</h2>
<ul>
  <% @requests.each do |request| %>
    <li>
      <p><%=link_to request.user1.name, request.user1%><p>
    </li>
  <% end %>
</ul>
<%=link_to 'Log Out', destroy_user_session_path, data: { "turbo-method": :delete }%>
<%end%>